// Page content
$('#board-content').html('<%= j render(partial: "board_columns") %>');

applyPerfectScrollbar();

// Drag'n drop
applyDragula();

// Floating menu
$('*[data-behavior="open-floating-menu"]').on('click', function() {
  $('.floating-menu').addClass('show');
});
$('*[data-behavior="close-floating-menu"]').on('click', function() {
  $('.floating-menu').removeClass('show');
});

<% if @open_card %>
  $('.sento-kanban-cards a.card-action-link[data-card-id="<%= @open_card %>"]').trigger('click');
<% end %>
