var columnCardContainer = $('.sento-kanban-column[data-id="<%= @column.id %>"] .sento-kanban-cards');
columnCardContainer.prepend('<%= j render(partial: "new_card") %>');

$('form#new_card textarea#card_title').keyup(function(event) {
  if (event.keyCode == 13) { $('form#new_card').submit(); }
});

// Toggle the dropdown (the call to dropdown('toggle') as described in the
// documentation of Bootstrap makes the dropdown no more working)
$('.dropdown.open').trigger('click');

selectFirstActiveInput();

$(document).keyup(function(event) {
  if (event.keyCode == 27) { // escape key
    $('.card.card-block.new').remove();
  }
});
